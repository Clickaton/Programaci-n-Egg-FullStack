Algoritmo RadCircunf
	Definir NumPI Como Real
	Definir NumRadio Como Real
	Definir area Como Real
	Definir perimetro Como Real
	Escribir "Por favor, ingrese el valor del radio de la circunferencia"
	Leer NumRadio
	NumPI <-  3.1415926535
	area <-  (NumPI*(NumRadio^2))
	perimetro <- (2*NumPI*NumRadio)
	Escribir "El area es: " area
	Escribir "El perímetro es: " perimetro 
	
FinAlgoritmo
